<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/activity_sign_up"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:padding="10dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:textSize="50dp"
        android:textColor="#060f60"
        android:id="@+id/weather_sign_up"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up to your account"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@+id/weather_sign_up"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:id="@+id/sign_up_account"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Name"
        android:textColorHint="#aa000000"
        android:id="@+id/name"
        android:layout_below="@+id/sign_up_account"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_sign_up"
        android:layout_below="@+id/name"
        android:background="#4b83c2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Email"
        android:textColorHint="#aa000000"
        android:id="@+id/email"
        android:layout_below="@+id/view_sign_up"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_second_sign_up"
        android:layout_below="@+id/email"
        android:background="#4b83c2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Password"
        android:textColorHint="#aa000000"
        android:id="@+id/password"
        android:layout_below="@+id/view_second_sign_up"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_third_sign_up"
        android:layout_below="@+id/password"
        android:background="#4b83c2"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="Confirm password"
        android:textColorHint="#aa000000"
        android:id="@+id/confirm_password"
        android:layout_below="@+id/view_third_sign_up"
        android:padding="10dp"
        android:background="@null"
        android:layout_marginTop="20dp"
        android:textColor="#000"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/view_fourth_sign_up"
        android:layout_below="@+id/confirm_password"
        android:background="#4b83c2"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="submit"
        android:textSize="20dp"
        android:textColor="#f9f9f9"
        android:background="#4b83c2"
        android:id="@+id/submit_button"
        android:layout_below="@+id/view_fourth_sign_up"
        android:layout_marginTop="20dp"
        />


</RelativeLayout>
